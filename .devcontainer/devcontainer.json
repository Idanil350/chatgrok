// Fichier .devcontainer/devcontainer.json

{
  "name": "Chat Grok - Streamlit App",
  
  // Utilise le Dockerfile dans le même dossier pour construire l'environnement
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  
  // Personnalisation pour Visual Studio Code
  "customizations": {
    "vscode": {
      "settings": {
        // Définit l'interpréteur Python par défaut dans le conteneur
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      // Extensions VS Code recommandées pour le développement Python
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  
  // Commande à exécuter après la création du conteneur
  // Lance automatiquement l'application Streamlit
  "postAttachCommand": "streamlit run app.py --server.port=8501 --server.enableCORS=false --server.enableXsrfProtection=false",
  
  // Mappe le port de l'application depuis le conteneur vers ta machine
  "forwardPorts": [
    8501
  ],
  "portsAttributes": {
    "8501": {
      "label": "Application Streamlit",
      "onAutoForward": "openPreview"
    }
  }
}
